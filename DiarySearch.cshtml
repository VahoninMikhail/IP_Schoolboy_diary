@model IEnumerable<Schoolboy_diary.Models.Diary>
@{
    Layout = null;
}

<div id="searchresults">
    <table>
        <thead>
            <tr>
                <th>Дата</th>
                <th>Номер урока</th>
                <th>Предмет</th>
                <th>Оценка</th>
                <th>Домашнее задание</th>
                <th>Примечание</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" style="color:red">
                        No Match Any Document
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date</td>
                        <td>@item.NumLesson</td>
                        <td>@item.NameLesson</td>
                        <td>@item.Mark</td>
                        <td>@item.Homework</td>
                        <td>@item.Note</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
